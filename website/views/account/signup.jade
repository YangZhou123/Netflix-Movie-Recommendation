extends ../layout

block content
    .content
      .register
        form.form-horizontal(id='signup-form', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .register-top-grid
            h3 Personal Information
            div
              span
                | First Name
                label *
              input.form-control(type='text', name='fname', id='fname', placeholder='First Name', autofocus, required)
            div
              span
                | Last Name
                label *
              input.form-control(type='text', name='lname', id='lname', placeholder='Last Name', required)
            div
              span
                | Email Address
                label *
              input.form-control(type='email', name='email', id='email', placeholder='Email', required)
          .clearfix
          .register-bottom-grid
            h3 Login Information
            div
              span
                | Password
                label *
              input.form-control(type='password', name='password', id='password', placeholder='Password', required)
            div
              span
                | Confirm Password
                label *
              input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password', required)
            .clearfix
          .clearfix
          .register-but
            input(type='submit', value='submit')

